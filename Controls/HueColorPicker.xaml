<UserControl x:Class="ExtendCSharpWPF.Controls.HueColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtendCSharpWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Canvas x:Name="canvas"  Margin="0,0,0,0" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp">
            <Canvas.Background>
                <ImageBrush Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>

    </Grid>
</UserControl>
